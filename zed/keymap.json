[
  // list of shortcuts I once accidentaly hit and did stuff I didn't want
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-b": null
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-x ctrl-e": null
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-shift-tab": "pane::ActivatePreviousItem",
      "ctrl-tab": "pane::ActivateNextItem"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      ">": ["workspace::SendKeystrokes", "> g v"],
      "<": ["workspace::SendKeystrokes", "< g v"]
    }
  },
  {
    "context": "(VimControl && !menu)",
    "bindings": {
      "j": "vim::Left",
      "k": "vim::Down",
      "l": "vim::Up",
      ";": "vim::Right"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-;": "vim::ToggleProjectPanelFocus",
      "k": "vim::MenuSelectNext",
      "l": "vim::MenuSelectPrevious",
      "j": "project_panel::CollapseSelectedEntry",
      ";": "project_panel::ExpandSelectedEntry",
      "f": "project_panel::NewFile",
      "d": "project_panel::NewDirectory"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock",
      "space v": "pane::SplitRight"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor && !ProjectPanel",
    "bindings": {
      "ctrl-j": "workspace::ActivatePaneLeft",
      "ctrl-;": "workspace::ActivatePaneRight",
      "ctrl-l": "workspace::ActivatePaneUp",
      "ctrl-k": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Dock && !ProjectPanel",
    "bindings": {
      "ctrl-j": "workspace::ActivatePaneLeft",
      "ctrl-;": "workspace::ActivatePaneRight",
      "ctrl-l": "workspace::ActivatePaneUp",
      "ctrl-k": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-l": "vim::LineUp",
      "shift-k": "vim::LineDown"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-j": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Workspace || vim_mode == normal",
    "bindings": {
      "ctrl-e": "workspace::ToggleLeftDock"
    }
  }
]
